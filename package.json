{
    "name": "enhance.dev",
    "version": "1.0.0-alpha.1",
    "description": "Enhance landing page docs and tutorial",
    "type": "module",
    "scripts": {
        "start": "ARC_TABLES_PORT=5555 arc sandbox",
        "lint": "eslint 'src/**/**.*js' --ignore-pattern node_modules  --fix",
        "test": "echo 'add tests'",
        "test:unit": "ARC_TABLES_PORT=5555 cross-env tape 'test/**/*-test.js' --verbose | tap-arc ",
        "styles": "mkdir -p public/css && enhance ./css-config.json > ./public/css/styles.css"
    },
    "devDependencies": {
        "@architect/architect": "^10.3.3",
        "@architect/eslint-config": "^2.0.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.4.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.5.1",
        "prettier-eslint": "^13.0.0",
        "tap-arc": "^0.1.1",
        "tape": "^5.5.2",
        "tiny-json-http": "^7.3.0"
    },
    "dependencies": {
        "@architect/functions": "^5.0.4",
        "@architect/plugin-bundles": "^2.0.0",
        "@begin/codemirror": "^0.0.3",
        "@begin/data": "^4.0.0-RC.2",
        "@enhance/enhance-style-transform": "github:enhance-dev/enhance-style-transform",
        "@enhance/import-transform": "^3.0.0",
        "@enhance/ssr": "^2.3.2",
        "@enhance/store": "^1.0.0",
        "@enhance/styles": "^1.0.0",
        "arc-plugin-oauth": "^0.0.15",
        "arcdown": "^0.2.0",
        "css": "^3.0.0",
        "html-beautify": "^1.0.4",
        "js-beautify": "^1.14.1",
        "markdown-it": "^12.3.2",
        "markdown-it-attrs": "^4.1.3",
        "nanoid": "^3.3.2",
        "prismjs": "^1.27.0",
        "ulid": "^2.3.0",
        "xss": "^1.0.8"
    },
    "eslintConfig": {
        "extends": [
            "@architect/eslint-config",
            "plugin:prettier/recommended"
        ],
        "plugins": [
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "semi": false,
                    "singleQuote": true,
                    "tabWidth": 2,
                    "useTabs": false,
                    "trailingComma": "none",
                    "bracketSameLine": true
                }
            ]
        },
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },
        "env": {
            "es2021": true,
            "browser": true,
            "node": true
        }
    }
}

{
    "name": "enhance.dev",
    "version": "0.1.0",
    "description": "Enhance landing page docs and tutorial",
    "scripts": {
        "start": "ARC_TABLES_PORT=5555 arc sandbox",
        "lint": "eslint src --ignore-pattern node_modules --fix",
        "test": "echo 'add tests'",
        "test:unit": "ARC_TABLES_PORT=5555 cross-env tape 'test/**/*-test.js' --verbose | tap-arc ",
        "styles": "enhance ./css-config.json > ./public/components/css/styles.css"
    },
    "devDependencies": {
        "@architect/eslint-config": "^2.0.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.4.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.5.1",
        "prettier-eslint": "^13.0.0",
        "tap-arc": "^0.1.1",
        "tape": "^5.5.2",
        "tiny-json-http": "^7.3.0"
    },
    "dependencies": {
        "@architect/architect": "^10.0.3",
        "@architect/functions": "^5.0.4",
        "@begin/data": "^4.0.0-RC.2",
        "@enhance/ssr": "^2.0.1",
        "@enhance/styles": "^1.0.0",
        "css": "^3.0.0",
        "rework": "^1.0.1",
        "xss": "^1.0.8"
    },
    "eslintConfig": {
        "extends": [
            "@architect/eslint-config",
            "plugin:prettier/recommended"
        ],
        "plugins": [
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "semi": false,
                    "singleQuote": true,
                    "tabWidth": 2,
                    "useTabs": false,
                    "trailingComma": "none",
                    "bracketSameLine": true
                }
            ]
        },
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },
        "env": {
            "es2021": true,
            "browser": true,
            "node": true
        }
    }
}

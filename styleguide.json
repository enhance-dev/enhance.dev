    "mono": "Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace",
    "roboto": "'Roboto Mono', monospace",
    "rubik": "'Rubik', sans-serif"
  },
  "grid": {
    "steps": 6
  },
  "color": {
    "white": "#FFFFFF",
    "black": "#000000",
    "light": "#EFEFEF",
    "dark": "#222222",
    "ateneo": "#113A62",
    "blue": "#1F74D6",
    "cloud": "#F7F0FE",
    "dark-purple": "#7327CE",
    "denim": "#003451",
